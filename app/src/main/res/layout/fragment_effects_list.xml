                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:fontFamily="@font/font_avant"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Comic 5"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/effectApril"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgChangeHue"
                    android:layout_width="match_parent"
                    app:shapeAppearanceOverlay="@style/roundedCorners"
                    android:scaleType="fitCenter"
                    android:layout_height="0dp"
                    android:layout_weight="1"  />

                <TextView
                    android:id="@+id/aprilText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:fontFamily="@font/font_avant"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Comic 6"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/effectAmazon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgKeepHue"
                    app:shapeAppearanceOverlay="@style/roundedCorners"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/amazontext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
