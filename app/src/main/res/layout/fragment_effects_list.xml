<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/effects_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:paddingTop="10dp"
            android:id="@+id/effects"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/effectNormal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="vertical"
                android:weightSum="1">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgBrightness"
                    app:shapeAppearanceOverlay="@style/roundedCorners"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/normalText"
                    android:text="Original"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_avant"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/effectStruck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgContrast"
                    app:shapeAppearanceOverlay="@style/roundedCorners"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/struckText"
                    android:textColor="#9a9a9a"
                    android:fontFamily="@font/font_avant"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Comic 1"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/effectClarendon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgSaturation"
                    app:shapeAppearanceOverlay="@style/roundedCorners"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:fontFamily="@font/font_avant"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:id="@+id/clarendonText"
                    android:text="Comic 2"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/effectOldMan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
