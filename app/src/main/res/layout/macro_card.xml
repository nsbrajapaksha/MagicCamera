<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/macroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="40sp"
        app:autoSizeMinTextSize="9sp"
        app:autoSizeTextType="uniform"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/second_line"
        app:layout_constraintStart_toEndOf="@+id/infoMacro"
        app:layout_constraintTop_toTopOf="@+id/infoMacro" />

    <TextView
        android:id="@+id/second_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeTextType="uniform"
        android:text="X effect(s)"
        app:layout_constraintBottom_toBottomOf="@+id/infoMacro"
        app:layout_constraintStart_toStartOf="@+id/macroName"
        app:layout_constraintTop_toBottomOf="@+id/macroName" />

    <ImageButton
        android:id="@+id/applyMacro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_vertical_align_bottom_white_24dp" />

    <ImageButton
        android:id="@+id/infoMacro"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/applyMacro"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/deleteMacro"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_forever_white_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>